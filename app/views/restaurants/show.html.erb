<h2><%= @restaurant.name %></h2>

<p>Category: <%= @restaurant.category %></p>
<p>Location: <%= @restaurant.address %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class='list-group-item'>
      <%= review.content %>
      <%= link_to  "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ul>
<br>

<p><%= link_to  "Add a review", new_restaurant_review_path(@restaurant) %></p>


<%= link_to  "Back to the list", restaurants_path %>
